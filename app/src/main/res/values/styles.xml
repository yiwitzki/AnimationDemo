<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="redpacket_tip_text" parent="@style/wrap_wrap">
        <item name="android:textSize">13.0sp</item>
    </style>
    <style name="redpacket_username_text" parent="@style/redpacket_tip_text">
        <item name="android:layout_marginTop">6.0dip</item>
    </style>
    <style name="redpacket_received_gold_icon">
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">15.0dip</item>
        <item name="android:src">@drawable/redpacket_diamond</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="redpacket_container">
        <item name="android:background">@drawable/bg_room_red_packet</item>
        <item name="android:layout_width">@dimen/room_userinfo_width</item>
        <item name="android:layout_height">@dimen/room_userinfo_height</item>
    </style>
    <style name="redpacket_close_container">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_room_red_packet_bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="redpacket_close_img">
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_width">30.0dip</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:src">@drawable/redpacket_close</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="redpacket_top_topline" parent="@style/line_black">
        <item name="android:background">@color/room_red_packet_top_topline</item>
    </style>
    <style name="redpacket_top_bottomline" parent="@style/line_black">
        <item name="android:background">@color/room_red_packet_top_bottomline</item>
    </style>
    <style name="redpacket_info_container" parent="@style/fill_wrap">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="redpacket_img_open">
        <item name="android:layout_width">@dimen/room_redpacket_open_btn_width</item>
        <item name="android:layout_height">@dimen/room_redpacket_open_btn_width</item>
        <item name="android:layout_marginTop">-35.0dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="redpacket_loading" parent="@android:style/Widget.ProgressBar.Large.Inverse">
        <item name="android:layout_width">@dimen/room_redpacket_open_btn_width</item>
        <item name="android:layout_height">@dimen/room_redpacket_open_btn_width</item>
        <item name="android:layout_marginTop">-35.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/icn_loading_indicator_2</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="line_black">
        <item name="android:background">@color/global_black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/global_line_height</item>
    </style>

    <style name="cell_useritem_username" parent="@style/wrap_wrap">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/cell_userlist_username</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">150.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="cell_redpacket_useritem_username" parent="@style/cell_useritem_username">
        <item name="android:maxWidth">130.0dip</item>
    </style>

    <style name="cell_useritem_level_img">
        <item name="android:layout_width">31.0sp</item>
        <item name="android:layout_height">14.0sp</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:src">@drawable/rank_1</item>
        <item name="android:minWidth">31.0sp</item>
    </style>
    <style name="cell_useritem_giftvalue" parent="@style/wrap_wrap">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/cell_userlist_tip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>
